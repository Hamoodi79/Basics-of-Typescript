<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DOM Manipulation</title>
    <style>
        body {
            padding: 20px;
            background-color: #f2f2f2;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
    
        .button {
            font-size: 20px;
            font-weight: bold;
            display: inline;
            color: white;
            background-color: black;
            margin: 10px;
            padding: 20px 40px;
            border-radius: 30px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
        }
    
        .button:hover {
            background-color: #4562a0;
        }
    </style>
</head>
<body>
    <div class="button" id="button1">
        I am Black
    </div>
    <div class="button" id="button2" style="display: inline;">
        I am Black 
    </div>
    <script>
        let text1 = document.getElementById('button1') as HTMLDivElement;
        let text2 = document.getElementById('button2') as HTMLDivElement;
        let texts = document.getElementsByClassName('button') as HTMLCollectionOf<HTMLDivElement>;

        text1.addEventListener('click', (e) => {
            console.log('text1 clicked :', texts);
            if (text2.style.display === 'none') {
                text2.style.display = 'inline';
            } else {
                text2.style.display = 'none';
            }
        });

        text2.addEventListener('click', (e) => {
            let button1 = document.getElementById('button1') as HTMLDivElement;
            if (button1.textContent === 'I am Black') {
                button1.textContent = 'I am Orange';
                button1.style.backgroundColor = 'Orange';
            } else {
                button1.textContent = 'I am Black';
                button1.style.backgroundColor = 'Black';
            }
        });
    </script>
</body>
</html>
